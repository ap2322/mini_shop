<h1><%= @item.name %> </h1>

<%= image_tag(@item.image) %>

<p><%= @item.description %></p>
<p>Price: <%= number_to_currency(@item.price)  %></p>
<p>Inventory: <%= @item.inventory %></p>
<p>Status: <%= @item.status %></p>
<p>Sold by: <%= @item.merchant.name %> </p>

<%= link_to "Update Item", "/items/#{@item.id}/edit" %> 
